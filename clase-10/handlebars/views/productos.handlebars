<h1>Productos</h1>

{{#if productos }}
    
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;">
                <th>Nombre</th>
                <th>Precio</th>
                <th>Imagen</th>
            </tr>
            {{#each productos}}
                <tr>
                    <td>
                        {{this.nombre}}
                    </td>
                    <td>
                        {{this.precio}}
                    </td>
                    <td>
                       <img src="{{this.imagen}}"> 
                    </td>
                </tr>
                {{/each}}
        </table>
    </div>
{{/if}}

<a href="/">Ingresar nuevos productos</a>