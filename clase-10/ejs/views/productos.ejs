<h2 style="color:crimson;">Productos</h2>
<% if(productos.length> 0){ %><div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;">
                <th>Nombre</th>
                <th>Precio</th>
                <th>Imagen</th>
            </tr>
            <% for (const producto of productos) {%>
                <tr>
                    <td>
                        <%=producto.nombre%>
                    </td>
                    <td>
                        <%=producto.precio%>
                    </td>
                    <td>
                        <img src="<%=producto.imagen%>"
                    </td>
                </tr>
                <%};%>
        </table>
    </div>
    <% } else{ %>
        <h3 class="alert alert-danger">No hay productos cargados</h1>
            <% } %>

<a href="/">Cargar nuevos productos</a>